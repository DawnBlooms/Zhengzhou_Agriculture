        });\r\n    },\r\n\r\n    filterByCategory(classes) {\r\n      this.classes = classes;\r\n      this.fetchPlants()\r\n    },\r\n\r\n    searchPlants() {\r\n      this.filteredPlants = this.plants.filter((plant) =>\r\n          plant.type.toLowerCase().includes(this.searchQuery.toLowerCase())\r\n      );\r\n      this.resetPagination();\r\n    },\r\n    prevPage() {\r\n      if (this.currentPage > 1) {\r\n        this.currentPage--;\r\n        this.fetchPlants(); // Ëé∑ÂèñÂΩìÂâçÈ°µÁöÑÊé®Ëçê‰ΩúÁâ©\r\n      }\r\n    },\r\n    nextPage() {\r\n      if (this.currentPage < this.totalPages) {\r\n        this.currentPage++;\r\n        this.fetchPlants(); // Ëé∑ÂèñÂΩìÂâçÈ°µÁöÑÊé®Ëçê‰ΩúÁâ©\r\n      }\r\n    },\r\n    navigateToPlantDetail(plantId) {\r\n      this.$router.push(`/user/plantDetails/${plantId}`);\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.mall-container {\r\n  display: flex;\r\n  flex-direction: column;\r\n  padding: 20px;\r\n}\r\n\r\n.search-bar {\r\n  text-align: center;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.search-bar input {\r\n  width: 80%;\r\n  padding: 10px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 4px;\r\n}\r\n\r\n.content {\r\n  display: flex;\r\n  gap: 20px;\r\n}\r\n\r\n.category-box {\r\n  flex: 1;\r\n  border: 1px solid #ddd;\r\n  padding: 15px;\r\n  border-radius: 4px;\r\n}\r\n\r\n.category-box h3 {\r\n  margin-bottom: 10px;\r\n  font-size: 18px;\r\n}\r\n\r\n.category-box ul {\r\n  list-style: none;\r\n  padding: 0;\r\n}\r\n\r\n.category-box li {\r\n  padding: 10px;\r\n  cursor: pointer;\r\n  border-bottom: 1px solid #ddd;\r\n}\r\n\r\n.category-box li:last-child {\r\n  border-bottom: none;\r\n}\r\n\r\n.category-box li.active {\r\n  background-color: #f0f0f0;\r\n  font-weight: bold;\r\n}\r\n\r\n.button-group {\r\n  display: flex;\r\n  flex-wrap: wrap;\r\n  gap: 10px;\r\n}\r\n\r\n.button-group button {\r\n  padding: 8px 16px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n  background-