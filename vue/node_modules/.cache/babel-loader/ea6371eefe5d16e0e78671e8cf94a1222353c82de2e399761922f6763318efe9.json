vigateToDetail","newsId","$router","push"],"sources":["src/views/User/Top.vue"],"sourcesContent":["<template>\r\n  <div id=\"news-carousel\">\r\n    <!-- 新闻轮播 -->\r\n    <el-carousel :interval=\"3000\" arrow=\"always\" height=\"400px\">\r\n      <el-carousel-item v-for=\"newsItem in newsList\" :key=\"newsItem.id\">\r\n        <div class=\"news-item\" @click=\"navigateToDetail(newsItem.id)\">\r\n          <img :src=\"newsItem.avatar || 'https://via.placeholder.com/800x400'\" alt=\"News Avatar\" class=\"news-image\" />\r\n          <div class=\"news-title\">\r\n            <h3>{{ newsItem.title }}</h3>\r\n          </div>\r\n        </div>\r\n      </el-carousel-item>\r\n    </el-carousel>\r\n\r\n    <!-- 热门推荐作物 -->\r\n    <div id=\"recommended-plants\" class=\"recommended-plants\">\r\n      <h2>热门推荐作物</h2>\r\n      <div class=\"plant-grid\">\r\n        <div class=\"plant-item\" v-for=\"plant in paginatedPlants\" :key=\"plant.id\">\r\n          <img :src=\"plant.crop_avatar || 'https://via.placeholder.com/200'\" alt=\"Plant Image\" class=\"plant-image\" />\r\n          <h4>{{ plant.type }}</h4>\r\n          <p>来源农户: {{ plant.username }}</p>\r\n          <div class=\"ratings\">\r\n            <span class=\"heart-icon\">❤️</span>\r\n            <span class=\"rating-count\">{{ plant.likes }}</span>\r\n          </div>\r\n          <p>已售: {{ plant.sales }}</p>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 分页控制 -->\r\n      <el-pagination\r\n          v-model:current-page=\"currentPage\"\r\n          :page-size=\"pageSize\"\r\n          :total=\"totalPlants\"  <!-- 使用 totalPlants -->\r\n      @current-change=\"handlePageChange\"\r\n      layout=\"total, prev, pager, next\"\r\n      />\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nexport default {\r\n  name: \"Top\",\r\n  data() {\r\n    return {\r\n      newsList: [], // 存储新闻数据\r\n      recommendedPlants: [], // 存储热门推荐作物数据\r\n      currentPage: 1, // 当前页数\r\n      pageSize: 8, // 每页显示数量\r\n      totalPlants: 0 // 总作物数量\r\n    };\r\n  },\r\n  computed: {\r\n    // 计算当前页显示的作物\r\n    paginatedPlants() {\r\n      const start = (this.currentPage - 1) * this.pageSize;\r\n      return this.recommendedPlants.slice(start, start + this.pageSize);\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchNews();\r\n    this.fetchRecommendedPlants(); // 获取推荐作物数据\r\n  },\r\n  methods: {\r\n    // 获取新闻数据\r\n    fetchNews() {\r\n      this.$request.get('/news/all')\r\n          .then(response => {\r\n            if (response.code === \"200\") {\r\n              this.newsList = response.data;\r\n            } else {\r\n              this.$message.error(response.msg);\r\n            }\r\n          })\r\n          .catch(error => {\r\n            this.$message.error(error);\r\n          });\r\n    },\r\n    // 获取热门推荐作物数据\r\n    fetchRecommendedPlants() {\r\n      this.$request.get(`/plants/page?page=${this.currentPage}&pageSize=${this.pageSize}`)\r\n          .then(response => {\r\n            if (response.code === \"200\") {\r\n              this.recommendedPlants = response.data;\r\n              this.totalPlants = response.total; // 设置总作物数量\r\n            } else {\r\n              this.$message.error(response.msg);\r\n            }\r\n          })\r\n          .catch(error => {\r\n            this.$message.error(error);\r\n          });\r\n    },\r\n    handlePageChange(page) {\r\n      this.currentPage = page;\r\n      this.fetchRecommendedPlants(); // 获取当前页的推荐作物\r\n    },\r\n    navigateToDetail(newsId) {\r\n      this.$router.push(`/news/${newsId}`);\r\n    }\r\n  },\r\n}\r\n</script>\r\n"],"mappings":";AA0CA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,QAAA;MAAA;MACAC,iBAAA;MAAA;MACAC,WAAA;MAAA;MACAC,QAAA;MAAA;MACAC,WAAA;IACA;EACA;;EACAC,QAAA;IACA;IACAC,gBAAA;MACA,MAAAC,KAAA,SAAAL,WAAA,aAAAC,QAAA;MACA,YAAAF,iBAAA,CAAAO,KAAA,CAAAD,KAAA,EAAAA,KAAA,QAAAJ,QAAA;IACA;EACA;EACAM,QAAA;IACA,KAAAC,SAAA;IACA,KAAAC,sBAAA;EACA;;EACAC,OAAA;IACA;IACAF,UAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,cACAC,IAAA,CAAAC,QAAA;QACA,IA