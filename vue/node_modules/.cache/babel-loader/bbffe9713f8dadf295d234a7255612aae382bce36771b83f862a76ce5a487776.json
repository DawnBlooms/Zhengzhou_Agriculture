antDetails();\r\n  },\r\n  methods: {\r\n    fetchPlantDetails() {\r\n      const plantId = this.$route.params.id; // 获取路由参数中的作物 ID\r\n      this.$request.get(`/plants/${plantId}`)\r\n          .then(response => {\r\n            if (response.code === \"200\") {\r\n              this.plant = response.data;\r\n            } else {\r\n              this.$message.error(response.msg);\r\n            }\r\n          })\r\n          .catch(error => {\r\n            this.$message.error(\"加载作物详情失败\");\r\n          });\r\n    },\r\n    handleBack() {\r\n      this.$router.back(); // 返回上一页\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.plant-details {\r\n  padding: 20px;\r\n}\r\n\r\n.plant-info {\r\n  display: flex;\r\n  flex-wrap: wrap;\r\n  gap: 20px;\r\n}\r\n\r\n.plant-image {\r\n  width: 400px;\r\n  height: auto;\r\n  border-radius: 8px;\r\n}\r\n\r\n.plant-details-content {\r\n  flex: 1;\r\n  max-width: 600px;\r\n}\r\n\r\n.user-avatar {\r\n  width: 100px;\r\n  height: auto;\r\n  border-radius: 50%;\r\n  margin-left: 10px;\r\n}\r\n\r\nbutton {\r\n  margin-top: 20px;\r\n  padding: 10px 20px;\r\n  background-color: #409eff;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #66b1ff;\r\n}\r\n</style>\r\n"],"mappings":"AAmBA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,KAAA;IACA;EACA;;EACAC,QAAA;IACA,KAAAC,iBAAA;EACA;EACAC,OAAA;IACAD,kBAAA;MACA,MAAAE,OAAA,QAAAC,MAAA,CAAAC,MAAA,CAAAC,EAAA;MACA,KAAAC,QAAA,CAAAC,GAAA,YAAAL,OAAA,IACAM,IAAA,CAAAC,QAAA;QACA,IAAAA,QAAA,CAAAC,IAAA;UACA,KAAAZ,KAAA,GAAAW,QAAA,CAAAZ,IAAA;QACA;UACA,KAAAc,QAAA,CAAAC,KAAA,CAAAH,QAAA,CAAAI,GAAA;QACA;MACA,GACAC,KAAA,CAAAF,KAAA;QACA,KAAAD,QAAA,CAAAC,KAAA;MACA;IACA;IACAG,WAAA;MACA,KAAAC,OAAA,CAAAC,IAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}