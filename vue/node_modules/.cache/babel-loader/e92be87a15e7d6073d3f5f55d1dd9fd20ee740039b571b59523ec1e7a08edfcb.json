ts.slice(start, start + this.pageSize);\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchNews();\r\n    this.fetchRecommendedPlants(); // 获取推荐作物数据\r\n  },\r\n  methods: {\r\n    // 获取新闻数据\r\n    fetchNews() {\r\n      this.$request.get('/news/all')\r\n          .then(response => {\r\n            if (response.code === \"200\") {\r\n              this.newsList = response.data;\r\n              this.totals = response.total;\r\n            } else {\r\n              this.$message.error(response.msg);\r\n            }\r\n          })\r\n          .catch(error => {\r\n            this.$message.error(error);\r\n          });\r\n    },\r\n    // 获取热门推荐作物数据\r\n    fetchRecommendedPlants() {\r\n      this.$request.get('/plants/page')\r\n          .then(response => {\r\n            if (response.code === \"200\") {\r\n              this.recommendedPlants = response.data;\r\n            } else {\r\n              this.$message.error(response.msg);\r\n            }\r\n          })\r\n          .catch(error => {\r\n            this.$message.error(error);\r\n          });\r\n    },\r\n    handlePageChange(page) {\r\n      this.currentPage = page;\r\n    },\r\n    navigateToDetail(newsId) {\r\n      this.$router.push(`/news/${newsId}`);\r\n    }\r\n  },\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n#news-carousel {\r\n  width: 100%;\r\n  margin: 20px auto;\r\n}\r\n\r\n.news-item {\r\n  position: relative;\r\n  cursor: pointer;\r\n}\r\n\r\n.news-image {\r\n  width: 100%;\r\n  height: 300px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n}\r\n\r\n.news-title {\r\n  position: absolute;\r\n  bottom: 20px;\r\n  left: 20px;\r\n  color: white;\r\n  background-color: rgba(0, 0, 0, 0.5);\r\n  padding: 10px 20px;\r\n  border-radius: 5px;\r\n}\r\n\r\n.news-title h3 {\r\n  margin: 0;\r\n  font-size: 24px;\r\n  font-weight: bold;\r\n}\r\n\r\n.recommended-plants {\r\n  margin-top: 40px;\r\n}\r\n\r\n.plant-grid {\r\n  display: grid;\r\n  grid-template-columns: repeat(4, 1fr);\r\n  gap: 20px;\r\n