{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: \"Top\",\n  data() {\n    return {\n      newsList: [],\n      // 存储新闻数据\n      recommendedPlants: [] // 存储热门推荐作物数据\n    };\n  },\n\n  mounted() {\n    this.fetchNews();\n    this.fetchRecommendedPlants(); // 获取推荐作物数据\n  },\n\n  methods: {\n    // 获取新闻数据\n    fetchNews() {\n      this.$request.get('/news/all').then(response => {\n        if (response.code === \"200\") {\n          this.newsList = response.data;\n        } else {\n          this.$message.error(response.msg);\n        }\n      }).catch(error => {\n        this.$message.error(error);\n      });\n    },\n    // 获取热门推荐作物数据\n    fetchRecommendedPlants() {\n      this.$request.get('/plants/page').then(response => {\n        if (response.code === \"200\") {\n          this.recommendedPlants = response.data;\n        } else {\n          this.$message.error(response.msg);\n        }\n      }).catch(error => {\n        this.$message.error(error);\n      });\n    },\n    navigateToDetail(newsId) {\n      this.$router.push(`/news/${newsId}`);\n    }\n  }\n};","map":{"version":3,"names":["name","data","newsList","recommendedPlants","mounted","fetchNews","fetchRecommendedPlants","methods","$request","get","then","response","code","$message","error","msg","catch","navigateToDetail","newsId","$router","push"],"sources":["src/views/User/Top.vue"],"sourcesContent":["<template>\r\n  <div id=\"news-carousel\">\r\n    <!-- 新闻轮播 -->\r\n    <el-carousel :interval=\"3000\" arrow=\"always\" height=\"400px\">\r\n      <el-carousel-item v-for=\"newsItem in newsList\" :key=\"newsItem.id\">\r\n        <div class=\"news-item\" @click=\"navigateToDetail(newsItem.id)\">\r\n          <img :src=\"newsItem.avatar || 'https://via.placeholder.com/800x400'\" alt=\"News Avatar\" class=\"news-image\" />\r\n          <div class=\"news-title\">\r\n            <h3>{{ newsItem.title }}</h3>\r\n          </div>\r\n        </div>\r\n      </el-carousel-item>\r\n    </el-carousel>\r\n\r\n    <!-- 热门推荐作物 -->\r\n    <div id=\"recommended-plants\" class=\"recommended-plants\">\r\n      <h2>热门推荐作物</h2>\r\n      <div class=\"plant-grid\">\r\n        <div class=\"plant-item\" v-for=\"plant in recommendedPlants\" :key=\"plant.id\">\r\n          <img :src=\"plant.avatar || 'https://via.placeholder.com/200'\" alt=\"Plant Image\" class=\"plant-image\" />\r\n          <h4>{{ plant.name }}</h4>\r\n          <p>来源农户: {{ plant.farmer }}</p>\r\n          <div class=\"ratings\">\r\n            <span class=\"heart-icon\">❤️</span>\r\n            <span class=\"rating-count\">{{ plant.goodReviews }}</span>\r\n          </div>\r\n          <p>已售: {{ plant.soldCount }}</p>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"Top\",\r\n  data() {\r\n    return {\r\n      newsList: [], // 存储新闻数据\r\n      recommendedPlants: [] // 存储热门推荐作物数据\r\n    };\r\n  },\r\n  mounted() {\r\n    this.fetchNews();\r\n    this.fetchRecommendedPlants(); // 获取推荐作物数据\r\n  },\r\n  methods: {\r\n    // 获取新闻数据\r\n    fetchNews() {\r\n      this.$request.get('/news/all')\r\n          .then(response => {\r\n            if (response.code === \"200\") {\r\n              this.newsList = response.data;\r\n            } else {\r\n              this.$message.error(response.msg);\r\n            }\r\n          })\r\n          .catch(error => {\r\n            this.$message.error(error);\r\n          });\r\n    },\r\n    // 获取热门推荐作物数据\r\n    fetchRecommendedPlants() {\r\n      this.$request.get('/plants/page')\r\n          .then(response => {\r\n            if (response.code === \"200\") {\r\n              this.recommendedPlants = response.data;\r\n            } else {\r\n              this.$message.error(response.msg);\r\n            }\r\n          })\r\n          .catch(error => {\r\n            this.$message.error(error);\r\n          });\r\n    },\r\n    navigateToDetail(newsId) {\r\n      this.$router.push(`/news/${newsId}`);\r\n    }\r\n  },\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n#news-carousel {\r\n  width: 100%;\r\n  margin: 20px auto;\r\n}\r\n\r\n.news-item {\r\n  position: relative;\r\n  cursor: pointer;\r\n}\r\n\r\n.news-image {\r\n  width: 100%;\r\n  height: 300px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n}\r\n\r\n.news-title {\r\n  position: absolute;\r\n  bottom: 20px;\r\n  left: 20px;\r\n  color: white;\r\n  background-color: rgba(0, 0, 0, 0.5);\r\n  padding: 10px 20px;\r\n  border-radius: 5px;\r\n}\r\n\r\n.news-title h3 {\r\n  margin: 0;\r\n  font-size: 24px;\r\n  font-weight: bold;\r\n}\r\n\r\n.recommended-plants {\r\n  margin-top: 40px;\r\n}\r\n\r\n.plant-grid {\r\n  display: grid;\r\n  grid-template-columns: repeat(4, 1fr);\r\n  gap: 20px;\r\n}\r\n\r\n.plant-item {\r\n  text-align: center;\r\n  border: 1px solid #e0e0e0;\r\n  border-radius: 8px;\r\n  padding: 10px;\r\n}\r\n\r\n.plant-image {\r\n  width: 100%;\r\n  height: auto;\r\n  border-radius: 8px;\r\n}\r\n\r\n.ratings {\r\n  color: red;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n}\r\n\r\n.heart-icon {\r\n  margin-right: 5px;\r\n}\r\n</style>\r\n"],"mappings":";AAkCA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,QAAA;MAAA;MACAC,iBAAA;IACA;EACA;;EACAC,QAAA;IACA,KAAAC,SAAA;IACA,KAAAC,sBAAA;EACA;;EACAC,OAAA;IACA;IACAF,UAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,cACAC,IAAA,CAAAC,QAAA;QACA,IAAAA,QAAA,CAAAC,IAAA;UACA,KAAAV,QAAA,GAAAS,QAAA,CAAAV,IAAA;QACA;UACA,KAAAY,QAAA,CAAAC,KAAA,CAAAH,QAAA,CAAAI,GAAA;QACA;MACA,GACAC,KAAA,CAAAF,KAAA;QACA,KAAAD,QAAA,CAAAC,KAAA,CAAAA,KAAA;MACA;IACA;IACA;IACAR,uBAAA;MACA,KAAAE,QAAA,CAAAC,GAAA,iBACAC,IAAA,CAAAC,QAAA;QACA,IAAAA,QAAA,CAAAC,IAAA;UACA,KAAAT,iBAAA,GAAAQ,QAAA,CAAAV,IAAA;QACA;UACA,KAAAY,QAAA,CAAAC,KAAA,CAAAH,QAAA,CAAAI,GAAA;QACA;MACA,GACAC,KAAA,CAAAF,KAAA;QACA,KAAAD,QAAA,CAAAC,KAAA,CAAAA,KAAA;MACA;IACA;IACAG,iBAAAC,MAAA;MACA,KAAAC,OAAA,CAAAC,IAAA,UAAAF,MAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":