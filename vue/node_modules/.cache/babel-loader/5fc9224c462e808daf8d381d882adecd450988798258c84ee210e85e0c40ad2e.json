Å\r\n      } else {\r\n        this.filteredPlants = this.plants.filter(plant => plant.classes === categoryId);\r\n      }\r\n      this.resetPagination();\r\n    },\r\n    resetPagination() {\r\n      this.currentPage = 1;\r\n    },\r\n    prevPage() {\r\n      if (this.currentPage > 1) {\r\n        this.currentPage--;\r\n      }\r\n    },\r\n    nextPage() {\r\n      if (this.currentPage < this.totalPages) {\r\n        this.currentPage++;\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.mall-page {\r\n  padding: 20px;\r\n}\r\n\r\n.search-bar input {\r\n  width: 100%;\r\n  padding: 10px;\r\n  margin-bottom: 20px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 4px;\r\n}\r\n\r\n.categories {\r\n  display: flex;\r\n  gap: 10px;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.categories button {\r\n  padding: 10px 15px;\r\n  background-color: #f5f5f5;\r\n  border: 1px solid #ddd;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n}\r\n\r\n.categories button.active {\r\n  background-color: #d0d0d0;\r\n}\r\n\r\n.plants-grid {\r\n  display: grid;\r\n  grid-template-columns: repeat(4, 1fr); /* ÊØèË°åÊòæÁ§∫ 4 Âàó */\r\n  gap: 20px;\r\n}\r\n\r\n.plant-card {\r\n  border: 1px solid #ddd;\r\n  border-radius: 8px;\r\n  overflow: hidden;\r\n  text-align: center;\r\n  padding: 15px;\r\n}\r\n\r\n.plant-card img {\r\n  width: 100%;\r\n  height: auto;\r\n  border-bottom: 1px solid #ddd;\r\n}\r\n\r\n.plant-card h3 {\r\n  margin: 10px 0;\r\n}\r\n\r\n.plant-card p {\r\n  color: #666;\r\n  font-size: 14px;\r\n}\r\n\r\n.pagination {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  margin-top: 20px;\r\n}\r\n\r\n.pagination button {\r\n  padding: 5px 10px;\r\n  margin: 0 5px;\r\n}\r\n\r\n</style>\r\n"],"mappings":"AAkDA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,WAAA;MACAC,SAAA;MACAC,MAAA;MACAC,cAAA;MACAC,gBAAA;MAAA;MACAC,WAAA;MACAC,QAAA;IACA;EACA;;EACAC,QAAA;IACAC,WAAA;MACA,OAAAC,IAAA,CAAAC,IAAA,MAAAP,cAAA,CAAAQ,MAAA,QAAAL,QAAA;IACA;IACAM,gBAAA;MACA,