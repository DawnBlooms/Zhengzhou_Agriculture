{"ast":null,"code":"export default {\n  name: \"Mall\",\n  data() {\n    return {\n      searchQuery: \"\",\n      cropTypes: [],\n      plants: [],\n      filteredPlants: [],\n      selectedCategory: null,\n      // ÂΩìÂâçÈÄâ‰∏≠ÁöÑÁ±ªÂà´\n      currentPage: 1,\n      pageSize: 8 // ÊØèÈ°µÊòæÁ§∫ÁöÑ‰∫ßÂìÅÊï∞Èáè\n    };\n  },\n\n  computed: {\n    totalPages() {\n      return Math.ceil(this.filteredPlants.length / this.pageSize);\n    },\n    paginatedPlants() {\n      const start = (this.currentPage - 1) * this.pageSize;\n      return this.filteredPlants.slice(start, start + this.pageSize);\n    }\n  },\n  created() {\n    this.fetchCropTypes();\n    this.fetchPlants();\n  },\n  methods: {\n    fetchCropTypes() {\n      this.$request.get('/cropType/all').then(response => {\n        this.cropTypes = response.data;\n      }).catch(error => {\n        console.error(\"Failed to load crop types:\", error);\n      });\n    },\n    fetchPlants() {\n      this.$request.get(`/plants/page?page=${1}&pageSize=${100}`).then(response => {\n        this.plants = response.data;\n        this.filteredPlants = this.plants;\n      }).catch(error => {\n        console.error(\"Failed to load plants:\", error);\n      });\n    },\n    searchPlants() {\n      this.filteredPlants = this.plants.filter(plant => plant.type.toLowerCase().includes(this.searchQuery.toLowerCase()));\n      this.resetPagination();\n    },\n    filterByCategory(categoryId) {\n      this.selectedCategory = categoryId;\n      if (categoryId === null) {\n        this.filteredPlants = this.plants; // ÊòæÁ§∫ÊâÄÊúâ‰∫ßÂìÅ\n      } else {\n        this.filteredPlants = this.plants.filter(plant => plant.classes === categoryId);\n      }\n      this.resetPagination();\n    },\n    resetPagination() {\n      this.currentPage = 1;\n    },\n    prevPage() {\n      if (this.currentPage > 1) {\n        this.currentPage--;\n      }\n    },\n    nextPage() {\n      if (this.currentPage < this.totalPages) {\n        this.currentPage+