         :key=\"post.id\"\r\n          shadow=\"hover\">\r\n        <div class=\"card-header\">\r\n          <img class=\"avatar\" :src=\"post.user_avatar\" alt=\"用户头像\" />\r\n          <div class=\"user-info\">\r\n            <span class=\"username\">{{ post.username }}</span>\r\n            <span class=\"role\">{{ post.role }}</span>\r\n            <span class=\"time\">{{ post.time }}</span>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"post-info\">\r\n          <h4>{{ post.title }}</h4>\r\n          <h5 class=\"post-content\">{{ post.content }}</h5>\r\n          <img :src=\"post.avatar || defaultPostImage\"\r\n               alt=\"帖子图片\"\r\n               class=\"post-image\"/>\r\n          <button  @click=\"editPost(post)\">修改</button>\r\n        </div>\r\n      </el-card>\r\n      <p v-if=\"noMoreData\"\r\n         class=\"end-of-content\"\r\n      >没有更多帖子了</p>\r\n    </div>\r\n\r\n    <el-dialog title=\"修改信息\" :visible.sync=\"formVisible\" width=\"40%\" :close-on-click-modal=\"false\" destroy-on-close>\r\n      <el-form :model=\"form\" label-width=\"100px\" style=\"padding-right: 50px\" :rules=\"rules\" ref=\"formRef\">\r\n        <el-form-item label=\"标题\" prop=\"title\">\r\n          <el-input v-model=\"form.title\" placeholder=\"标题\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"内容\" prop=\"content\">\r\n          <el-input v-model=\"form.content\" placeholder=\"内容\"></el-input>\r\n        </el-form-item>\r\n        <el-form-item label=\"图片\">\r\n          <el-upload\r\n              class=\"avatar-uploader\"\r\n              :action=\"$baseUrl + '/files/upload'\"\r\n              :headers=\"{ token: user.token }\"\r\n              list-type=\"picture\"\r\n              :on-success=\"handleAvatarSuccess\">\r\n            <el-button type=\"primary\">上传图片</el-button>\r\n          </el-upload>\r\n        </el-form-item>\r\n      </el-form>\r\n\r\n      <div slot=\"footer\" class=\"dialog-footer\">\r\n        <el-button @click=\"formVisible = false\">取 消</el-button>\r\n        <el-button type=\"primary\" @click=\"addNew\">确 定</el-button>\r\n      </div>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\r\n      defaultAvatar: \"https://via.placeholder.com/100\", // 默认头像\r\n      defaultPostImage: \"https://via.placeholder.com/500x250\", // 默认帖子图片\r\n      posts: [], // 用户的帖子数据\r\n      currentPage: 1, // 当前页数\r\n      pageSize: 3, // 每次请求的帖子数\r\n      totalPosts: 0, // 总帖数\r\n      loading: false, // 是否正在加载\r\n      noMoreData: false, // 是否已经没有更多数据\r\n      formVisible: false,\r\n      form:{}\r\n    };\r\n  },\r\n  mounted() {\r\n    this.fetchPosts();\r\n  },\r\n  methods: {\r\n    // 获取帖子信息\r\n    fetchPosts(page = 1) {\r\n      if (this.loading || this.noMoreData) return; // 如果正在加载或没有更多数据，不再请求\r\n      this.loading = true;\r\n\r\n      this.$request\r\n          .get('/cards/selectPage', {\r\n            params: {\r\n              pageNum: page,\r\n              pageSize: this.pageSize,\r\n            },\r\n          })\r\n          .then((response) => {\r\n            if (response.data) {\r\n              if (response.data.list && response.data.list.length > 0) {\r\n                this.posts = [...this.posts, ...response.data.list]; // 追加新帖子\r\n              }\r\n              this.totalPosts = response.data.total || 0;\r\n              if (this.posts.length >= this.totalPosts) {\r\n                this.noMoreData = true; // 如果加载完所有数据，则标记没有更多数据\r\n              }\r\n            }\r\n          })\r\n          .catch((error) => {\r\n            console.error('加载帖子失败:', error);\r\n          })\r\n          .finally(() => {\r\n            this.loading = false;\r\n          });\r\n    },\r\n\r\n    // 滚动时触发\r\n    handleScroll(event) {\r\n      const container = this.$refs.scrollContainer;\r\n      // 判断是否滚动到容器底部\r\n      if (container.scrollTop + container.clientHeight >= container.scrollHeight - 10) {\r\n        if (!this.loading && !this.noMoreData) {\r\n          this.currentPage++;\r\n          this.fetchPosts(this.currentPage);\r\n        }\r\n      }\r\n    },\r\n    editPost(post){\r\n      this.form = post\r\n      this.formVisible = true\r\n    },\r\n    addNew(){\r\n      this.$refs.formRef.validate((valid) => {\r\n        if (valid) {\r\n          this.$request({\r\n            url: '/cards/update',\r\n            method: 'PUT' ,\r\n            data: this.form\r\n          }).then(res => {\r\n            if (res.code === '200') {  // 表示成功保存\r\n              this.$message.success('保存成功')\r\n              this.fetchPosts()\r\n              this.formVisible = false\r\n            } else {\r\n              this.$message.error(res.msg)  // 弹出错误的信息\r\n            }\r\n          })\r\n        }\r\n      })\r\n    },\r\n    handleAvatarSuccess(response, file, fileList) {\r\n      // 把头像属性换成上传的图片的链接\r\n      this.form.avatar = response.data\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.profile-page {\r\n  display: flex;\r\n  gap: 20px;\r\n  padding: 20px;\r\n  background-color: #f8f9fa;\r\n  min-height: 100vh;\r\n}\r\n\r\n.profile-info {\r\n  flex-shrink: 0;\r\n  width: 300px;\r\n  padding: 20px;\r\n  background: linear-gradient(135deg, #208922, #66cc99);\r\n  color: #fff;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);\r\n  text-align: center;\r\n  height: 500px;\r\n}\r\n\r\n.profile-avatar {\r\n  width: 120px;\r\n  height: 120px;\r\n  border-radius: 50%;\r\n  border: 3px solid #fff;\r\n  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.user-details h2 {\r\n  font-size: 24px;\r\n  margin-bottom: 15px;\r\n  font-weight: bold;\r\n  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.user-stats {\r\n  font-size: 14px;\r\n  line-height: 1.8;\r\n}\r\n\r\n.posts-container {\r\n  flex-grow: 1;\r\n  display: flex;\r\n  flex-directio